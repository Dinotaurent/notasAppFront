---
interface Props {
    url: string;
}

const { url } = Astro.props;
---

<a
    class="px-6 py-2
            text-sm font-semibold
            rounded-md
            transition-colors duration-200
            bg-[#27DDF5] text-[#1A1A1A] // Fondo verde neón, texto oscuro
            hover:bg-lime-400
            focus:outline-none focus:ring-4 focus:ring-lime-500/50
            self-start mb-6"
    href=`${url}`
>
    <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 512 512"
        class="icono-fa"
        ><!--!Font Awesome Free v7.1.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.-->
        <path
            d="M9.4 233.4c-12.5 12.5-12.5 32.8 0 45.3l160 160c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L109.3 288 480 288c17.7 0 32-14.3 32-32s-14.3-32-32-32l-370.7 0 105.4-105.4c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0l-160 160z"
        ></path></svg
    >Regresar
</a>

<style>
    .icono-fa {
        width: 26px; /* O 2rem, o el tamaño que prefieras */
        height: 26px;
    }
</style>
